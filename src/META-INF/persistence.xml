<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="ItsCosmectisPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>model.Contas</class>
    <class>model.Produtos</class>
    <class>model.Ufs</class>
    <class>model.Vendas</class>
    <class>model.ClientesFisicos</class>
    <class>model.Cidades</class>
    <class>model.Fornecedores</class>
    <class>model.Estoques</class>
    <class>model.ContatosClientesJuridicos</class>
    <class>model.FornecedoresProdutos</class>
    <class>model.ClientesJuridicos</class>
    <class>model.Telefones</class>
    <class>model.Vendedores</class>
    <class>model.Enderecos</class>
    <class>model.Clientes</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/mydb?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="admin"/>
    </properties>
  </persistence-unit>
</persistence>
